<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.HomePageFrag">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.9"
        android:orientation="horizontal">

        <Button
            android:id="@+id/BuAddRecipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="add recipe manualy" />

        <Button
            android:id="@+id/BuAddRecipePic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="add recipe by picture" />

        <Button
            android:id="@+id/BuAddRecipeUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="add recipe by Url" />

    </LinearLayout>

    <Button
        android:id="@+id/BuFavorites"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.95"
        android:text="favorites" />

    <EditText
        android:id="@+id/ETSearchRecipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.94"
        android:ems="10"
        android:hint="Search Recipe"
        android:inputType="text" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RVRecipes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.23">

    </androidx.recyclerview.widget.RecyclerView>


</LinearLayout>